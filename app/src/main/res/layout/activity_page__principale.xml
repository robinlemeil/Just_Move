<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page_Principale">

    <ImageView
        android:id="@+id/id_logo"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        android:layout_marginStart="5dp" />

    <Spinner
        android:id="@+id/id_type"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:spinnerMode="dialog"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_onglet_ressource"
        android:layout_marginStart="20dp" />

    <Button
        android:id="@+id/id_recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/clear_green"
        android:text="@string/recherche_article"
        android:textColor="@color/green_logo"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_onglet_routine"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/id_onglet_parametr"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parametre"
        android:layout_marginEnd="20dp" />


    <Button
        android:id="@+id/id_onglet_ressource"
        android:layout_width="169dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/green_logo"
        android:text="@string/accueil"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_logo"
        android:layout_marginStart="20dp" />

    <Button
        android:id="@+id/id_onglet_routine"
        android:layout_width="169dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/green_logo"
        android:text="@string/routine"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_logo"
        android:layout_marginEnd="20dp" />

    <ListView
        android:id="@+id/liste_article"
        android:layout_width="382dp"
        android:layout_height="4000dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_recherche" />

    <Button
        android:id="@+id/id_onglet_parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/green_logo"
        android:layout_marginRight="72dp"
        android:text="Parametre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginVertical="10dp">


    <ImageView
        android:id="@+id/image_item"
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/article_eau_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titre_item"
        android:layout_width="230dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="@string/titre_default"
        android:textColor="@color/green_logo"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/image_item"
        app:layout_constraintTop_toTopOf="@+id/image_item"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/resume_item"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="@string/resume_default"
        android:textColor="@color/gris_clair"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_item"
        app:layout_constraintEnd_toStartOf="@+id/favori_item"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_item"
        app:layout_constraintTop_toBottomOf="@+id/titre_item"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/favori_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/ic_non_favori"
        app:layout_constraintBottom_toBottomOf="@+id/image_item"
        app:layout_constraintStart_toEndOf="@+id/image_item"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
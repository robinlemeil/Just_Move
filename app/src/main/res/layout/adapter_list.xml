<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/image_list"
        android:layout_width="81dp"
        android:layout_height="72dp"
        android:src="@drawable/article_sport_img" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/titre_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titre_default"
            android:textSize="17dp"
            android:textColor="@color/green_logo"/>


        <TextView
            android:id="@+id/resume_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resume_default"
            android:textSize="13dp"
            android:textColor="@color/gris_clair"
            android:layout_below="@+id/titre_list"/>
    </RelativeLayout>



</LinearLayout>